<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:accessibilityPaneTitle="Donuts"
    android:background="@drawable/donut_background"
    android:outlineAmbientShadowColor="@color/purple_200"
    tools:context=".DonutController">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="173dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/donut_quantity"
        app:layout_constraintEnd_toEndOf="@+id/donut_quantity"
        app:layout_constraintStart_toStartOf="@+id/donut_quantity"
        app:layout_constraintTop_toTopOf="@+id/donut_quantity"
        app:srcCompat="@android:drawable/bottom_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="146dp"
        app:layout_constraintBottom_toBottomOf="@+id/donut_subtotal"
        app:layout_constraintEnd_toEndOf="@+id/donut_subtotal"
        app:layout_constraintStart_toStartOf="@+id/donut_subtotal"
        app:layout_constraintTop_toTopOf="@+id/donut_subtotal"
        app:srcCompat="@drawable/gray_background" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="173dp"
        android:layout_height="43dp"
        app:layout_constraintBottom_toBottomOf="@+id/donut_flavor"
        app:layout_constraintStart_toStartOf="@+id/donut_flavor"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@android:drawable/bottom_bar" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="172dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="@+id/donut_type"
        app:layout_constraintEnd_toEndOf="@+id/donut_type"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/donut_type"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.421"
        app:srcCompat="@android:drawable/bottom_bar" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="174dp"
        android:layout_height="126dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="164dp"
        android:text="Donut Type"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="174dp"
        android:layout_height="126dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="16dp"
        android:text="Donut Flavor"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/donut_type"
        android:layout_width="173dp"
        android:layout_height="109dp"
        android:layout_marginTop="124dp"
        android:outlineAmbientShadowColor="@color/purple_200"
        android:outlineSpotShadowColor="@color/purple_200"
        android:scrollbarSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <Spinner
        android:id="@+id/donut_flavor"
        android:layout_width="173dp"
        android:layout_height="109dp"
        android:layout_marginTop="124dp"
        android:scrollbarSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/donut_subtotal"
        android:layout_width="123dp"
        android:layout_height="87dp"
        android:text="Sub-Total"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toEndOf="@+id/donut_type"
        app:layout_constraintTop_toBottomOf="@+id/donut_flavor"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/donut_price"
        android:layout_width="101dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/donut_subtotal"
        app:layout_constraintEnd_toEndOf="@+id/donut_subtotal"
        app:layout_constraintStart_toStartOf="@+id/donut_subtotal" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="174dp"
        android:layout_height="145dp"
        android:layout_marginTop="20dp"
        android:shadowColor="#55CEFF"
        android:text="Quantity"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/donut_flavor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/donut_flavor"
        app:layout_constraintTop_toBottomOf="@+id/donut_flavor" />

    <Spinner
        android:id="@+id/donut_quantity"
        android:layout_width="173dp"
        android:layout_height="70dp"
        android:layout_marginBottom="36dp"
        android:outlineAmbientShadowColor="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView7" />

    <Button
        android:id="@+id/donut_order"
        android:layout_width="106dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:text="Order"
        android:onClick="setDonutSubtotal"
        app:layout_constraintEnd_toEndOf="@+id/donut_subtotal"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="@+id/donut_subtotal"
        app:layout_constraintTop_toBottomOf="@+id/donut_subtotal" />

</androidx.constraintlayout.widget.ConstraintLayout>